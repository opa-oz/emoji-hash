{
  "name": "emoji-hash-gen",
  "version": "1.0.5",
  "description": "Generates hash of string in emoji",
  "main": "./lib/index.js",
  "types": "./lib/types.d.ts",
  "repository": "https://github.com/opa-oz/emoji-hash.git",
  "homepage": "https://opa-oz.github.io/emoji-hash/",
  "author": "opa_oz",
  "license": "MIT",
  "private": false,
  "keywords": [
    "zero-dependency",
    "emoji",
    "hash",
    "hash-generation",
    "front-end",
    "back-end"
  ],
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-typescript": "^7.24.1",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "babel-jest": "^29.7.0",
    "emoji-named-characters": "^1.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "shuffle-array": "^1.0.1",
    "standard-version": "^9.5.0",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.3",
    "make-coverage-badge": "^1.2.0"
  },
  "scripts": {
    "release": "standard-version",
    "test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg --report-path ./docs/coverage/coverage-summary.json",
    "build": "rimraf ./build && tsc && cp src/types/index.d.ts lib/types.d.ts",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "generate-table": "node scripts/pre-generate.js",
    "docs:type": "typedoc --out docs/typedoc src",
    "all": "yarn build && yarn test && yarn coverage && yarn docs:type"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "moduleNameMapper": {
      "^table.js$": "<rootDir>/src/generated/table.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "d.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "docs/coverage",
    "coverageReporters": [
      "json-summary",
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
